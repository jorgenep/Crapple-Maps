<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/applyFiltersButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <!-- ⭐ Star Rating -->
            <TextView
                android:text="Star Rating"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:layout_marginBottom="12dp" />

            <CheckBox android:id="@+id/star1" android:text="⭐ 1-Star Trash" />
            <CheckBox android:id="@+id/star2" android:text="⭐⭐ 2-Star Tragedy" />
            <CheckBox android:id="@+id/star3" android:text="⭐⭐⭐ 3-Star Mediocre Mess" />

            <!-- 🍽 Cuisine Type -->
            <TextView
                android:text="Cuisine Type"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <CheckBox android:id="@+id/pizza" android:text="🍕 Pizza" />
            <CheckBox android:id="@+id/sushi" android:text="🍣 Sushi" />
            <CheckBox android:id="@+id/burgers" android:text="🍔 Burgers" />
            <CheckBox android:id="@+id/mexican" android:text="🌮 Mexican" />
            <CheckBox android:id="@+id/chinese" android:text="🍜 Chinese" />
            <CheckBox android:id="@+id/healthy" android:text="🥗 “Healthy”" />

            <!-- 📍 Distance Range -->
            <TextView
                android:text="Distance Range"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <RadioGroup android:id="@+id/distanceGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton android:id="@+id/distance1" android:text="larger than 1 mile" />
                <RadioButton android:id="@+id/distance2" android:text="1 to 2 miles" />
                <RadioButton android:id="@+id/distance3" android:text="2 to 3.5 miles" />
            </RadioGroup>

            <!-- 💸 Price Range -->
            <TextView
                android:text="Price Range"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <CheckBox android:id="@+id/price1" android:text="$ - Cheap and Nasty" />
            <CheckBox android:id="@+id/price2" android:text="$$ - Regret in Every Bite" />
            <CheckBox android:id="@+id/price3" android:text="$$$ - Painfully Mediocre" />
            <CheckBox android:id="@+id/price4" android:text="$$$$ - Luxury Disappointment" />

        </LinearLayout>
    </ScrollView>

    <!-- Sticky Purple Button using theme color -->
    <Button
        android:id="@+id/applyFiltersButton"
        android:text="Filter Trash"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="#FFFFFF"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
